      "@type": "Verb",
      "definition": {
        "en": "Indicates the actor unlocked an option that was previously unavailable."
      },
      "prefLabel": {
        "en": "unlocked"
      },
      "scopeNote": {
        "en": "Used when the player unlocks an option in an alternative."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/200220389-v"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/verbs/used",
      "@type": "Verb",
      "definition": {
        "en": "Indicates the actor used a virtual object."
      },
      "prefLabel": {
        "en": "used"
      },
      "scopeNote": {
        "en": "Used when player uses items they find during the gameplay, to obtain different benefits."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/201161188-v"
      }
    }
