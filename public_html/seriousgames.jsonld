      "@type": "Verb",
      "closeMatch": {
        "@id": "http://future-learning.info/xAPI/verb/released"
      },
      "definition": {
        "en": "Indicates that the actor released the object from one's grip from or a specific state."
      },
      "prefLabel": {
        "en": "released"
      },
      "scopeNote": {
        "en": "Used when the player releases a previously pressed button."
      },
