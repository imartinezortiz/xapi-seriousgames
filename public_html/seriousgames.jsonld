  "activity-types": [
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/area",
      "@type": "ActivityType",
      "definition": {
        "en": "An identified area inside the game world."
      },
      "prefLabel": {
        "en": "area"
      },
      "scopeNote": {
        "en": "In some games they can also be worlds. Represents an aggregation of zones."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/102738693-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/controller",
      "@type": "ActivityType",
      "definition": {
        "en": "A game controller whose input affects the action in an activity."
      },
      "prefLabel": {
        "en": "controller"
      },
      "scopeNote": {
        "en": "Game controllers are common in non-pc games. This activity represents this device."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/103101611-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/cutscene",
      "@type": "ActivityType",
      "definition": {
        "en": "A non-interactive scene that can be skipped."
      },
      "prefLabel": {
        "en": "cutscene"
      },
      "scopeNote": {
        "en": "A cutscene is a non-interactive scene within the game (e.g., a video, a conversation, an automated sequence). The player can usually skip them pressing some button."
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/dialog-tree",
      "@type": "ActivityType",
      "definition": {
        "en": "An alternative presented during a conversation with an non-playable character."
      },
      "prefLabel": {
        "en": "dialog-tree"
      },
      "scopeNote": {
        "en": "Dialog trees are a common mechanic in video games, where players can answer questions to NPC. This activity represents that type of alternative."
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/enemy",
      "@type": "ActivityType",
      "definition": {
        "en": "A game object that poses a threat inside the game world."
      },
      "prefLabel": {
        "en": "enemy"
      },
      "scopeNote": {
        "en": "Enemies are common elements in video games. Defeating them indicates a player accomplishment."
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/item",
      "@type": "ActivityType",
      "definition": {
        "en": "A collectable game object whose use or interaction results in an effect in a game."
      },
      "prefLabel": {
        "en": "item"
      },
      "scopeNote": {
        "en": "Items are common elements in video games. Players can collect/use/combine them."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/103593583-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/keyboard",
      "@type": "ActivityType",
      "definition": {
        "en": "A keyboard whose keystrokes affects the action in an activity."
      },
      "prefLabel": {
        "en": "keyboard"
      },
      "scopeNote": {
        "en": "Somes games can receive inputs from keyboards: physical keyboards in a PC, or virtual keyboards in a smartphone screen. This activity represent both."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/103619216-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/level",
      "@type": "ActivityType",
      "closeMatch": {
        "@id": "http://curatr3.com/define/type/level"
      },
      "definition": {
        "en": "A level of a game or of a gamified learning platform."
      },
      "prefLabel": {
        "en": "level"
      },
      "scopeNote": {
        "en": "A level is logic partition of progression in any video game. Completing a level means advancing in the progression of the game."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/113962925-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/menu",
      "@type": "ActivityType",
      "definition": {
        "en": "A menu with several buttons/options whose selection produces different effects."
      },
      "prefLabel": {
        "en": "menu"
      },
      "scopeNote": {
        "en": "Represents a menu, integrated in the user interface (UI), with several a options."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/106505383-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/mouse",
      "@type": "ActivityType",
      "definition": {
        "en": "A mouse device whose clicks and movement affects the action in an activity."
      },
      "prefLabel": {
        "en": "mouse"
      },
      "scopeNote": {
        "en": "PC games are usually controlled by mouse interaction. This activity represents this device."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/103799022-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/non-player-character",
      "@type": "ActivityType",
      "definition": {
        "en": "A character that can offer a conversation or other type of interaction inside a game."
      },
      "prefLabel": {
        "en": "non-player-character"
      },
      "scopeNote": {
        "en": "Players usually have conversations with non-player characters."
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/quest",
      "@type": "ActivityType",
      "definition": {
        "en": "A accomplishable challenge or mission presented inside a game."
      },
      "prefLabel": {
        "en": "quest"
      },
      "scopeNote": {
        "en": "Completing quests marks the players' progress."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/202006623-v"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/screen",
      "@type": "ActivityType",
      "definition": {
        "en": "A game screen where a concrete game task is developed."
      },
      "prefLabel": {
        "en": "screen"
      },
      "scopeNote": {
        "en": "Games are usually composed by a set of screens the player navigates. A screen has a concrete function within the game. A screen contains a menu, or the gameplay. To define virtual zones inside the game world, it is recommended to use area or zone."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/103089644-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/serious-game",
      "@type": "ActivityType",
      "definition": {
        "en": "A game designed for a primary purpose other than pure entertainment. For instance, an educational game or a game-like simulation"
      },
      "prefLabel": {
        "en": "serious-game"
      },
      "scopeNote": {
        "en": "A serious game is the root container for the rest of game elements."
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/touchscreen",
      "@type": "ActivityType",
      "definition": {
        "en": "A touchscreen the player can press."
      },
      "prefLabel": {
        "en": "touchscreen"
      },
      "scopeNote": {
        "en": ""
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/104466078-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/activity-types/zone",
      "@type": "ActivityType",
      "definition": {
        "en": "An identified zone inside an area of the game world."
      },
      "prefLabel": {
        "en": "zone"
      },
      "scopeNote": {
        "en": "A zone is inside an area, and defines a logic self-contained place."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/108526463-n"
      }
    }
  ],
  "extensions": [
    {
      "@id": "https://w3id.org/xapi/seriousgames/extensions/progress",
      "@type": "xapi:Extension",
      "definition": {
        "en": "A decimal number (3 significant figures with 2 figures following the decimal point) between 0 and 1 (inclusive) to indicate the value of progress in a completable."
      },
      "prefLabel": {
        "en": "progress"
      },
      "scopeNote": {
        "en": "Indicates the progress in a completable. This extension appears in the Statement's result."
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/extensions/health",
      "@type": "xapi:Extension",
      "definition": {
        "en": "A decimal number (3 significant figures with 2 figures following the decimal point) between 0 and 1 (inclusive) to indicate the remaining health or stamina within a game."
      },
      "prefLabel": {
        "en": "health"
      },
      "scopeNote": {
        "en": "Used to represent the remaining health of the player (e.g., number of hearts, energy bar). This extension appears in the Statement's result."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/114471374-n"
      }
    },
    {
      "@id": "https://w3id.org/xapi/seriousgames/extensions/position",
      "@type": "xapi:Extension",
      "definition": {
        "en": "An object with attributes x, y and z indicating the position of the player within a particular area in a game."
      },
      "prefLabel": {
        "en": "position"
      },
      "scopeNote": {
        "en": "Used to represent the current position of the player inside the game world. This position should be expressed in a coordinate system known by the data analysts. This extension appears in the Statement's result."
      },
      "closelyRelatedNaturalLanguageTerm": {
        "@id": "http://wordnet-rdf.princeton.edu/wn31/108639173-n"
      }
    }
  ],
